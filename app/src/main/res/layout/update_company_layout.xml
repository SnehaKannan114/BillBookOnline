<?xml version="1.0" encoding="utf-8"?>
<!---Edited by Dinesh on 09-07-2017-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bangalore.bms.billbookonline.UpdateCompanyLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/backgroundForOtherActivites">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/update_company_profile"
        android:background="@color/backgroundLogin"
        android:textColor="@color/headingsBackground"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/scrollView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/companyNameInput"
                android:textColorHint="@color/hintTextColor"
                android:fontFamily="sans-serif"
                android:textColor="@color/textColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginStart="8dp"
                android:hint="@string/company_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:backgroundTint="@color/textColorInTextView"/>

            <EditText
                android:id="@+id/companyPANInput"
                android:textColorHint="@color/hintTextColor"
                android:fontFamily="sans-serif"
                android:textColor="@color/textColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:hint="@string/company_pan_no"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyNameInput"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:backgroundTint="@color/textColorInTextView"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/insert_your_company_logo"
                android:textColor="@color/textColorInTextView"
                android:fontFamily="sans-serif"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyPANInput" />

            <Button
                android:id="@+id/addButton"
                android:textColor="@color/windowBackground"
                android:background="@color/buttonColor"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/add_company_logo"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/cropButton"
                android:background="@color/buttonColor"
                android:fontFamily="sans-serif"
                android:textColor="@color/windowBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/crop_company_logo"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/addButton"
                app:layout_constraintBottom_toBottomOf="@+id/addButton"
                app:layout_constraintLeft_toRightOf="@+id/addButton"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/companyServiceTAXInput"
                android:hint="@string/company_service_tax_no"
                android:textColorHint="@color/hintTextColor"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/addButton"
                android:textColor="@color/textColorBlack"
                android:backgroundTint="@color/textColorInTextView"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/companyTINInput"
                android:hint="@string/company_tin_no"
                android:textColorHint="@color/hintTextColor"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/textColorBlack"
                android:backgroundTint="@color/textColorInTextView"
                app:layout_constraintTop_toBottomOf="@+id/companyServiceTAXInput"
                app:layout_constraintHorizontal_bias="0.0" />

            <Spinner
                android:id="@+id/spinnerServiceSector"
                android:textColor="@color/textColorBlack"
                android:fontFamily="sans-serif"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/companyTINInput"
                app:layout_constraintHorizontal_bias="0.0" />

            <EditText
                android:id="@+id/services"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:visibility="gone"
                android:textColor="@color/blackTextColor"
                android:textColorHint="@color/hintTextColor"
                android:hint="Enter Service Here"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerServiceSector"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <EditText
                android:id="@+id/Charges"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:visibility="gone"
                android:layout_marginLeft="8dp"
                android:textColor="@color/blackTextColor"
                android:textColorHint="@color/hintTextColor"
                android:hint="Enter Service Charge Here"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/services"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp" />

            <Button
                android:id="@+id/addServicesButton"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/add_service"
                android:textSize="16sp"
                android:background="@color/buttonColor"
                android:textColor="@color/windowBackground"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/Charges" />

            <Button
                android:id="@+id/saveCompanyProfileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/save_profile"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/addServicesButton"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                android:background="@color/buttonColor"
                android:textColor="@color/windowBackground"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
