<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Register with your Company details"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:background="@color/backgroundLogin"
        android:textColor="@color/textColorOnGreyBackground"
        android:fontFamily="sans-serif"
        android:layout_marginEnd="13dp"
        android:id="@+id/textView13"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:text="Enter Company Name:"
        android:fontFamily="sans-serif"
        android:textColor="@color/textColorOnGreyBackground"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorOnGreyBackground"
        android:fontFamily="sans-serif"
        android:id="@+id/et_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Enter PAN Number:"
        android:textColor="@color/textColorOnGreyBackground"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="99dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorOnGreyBackground"
        android:id="@+id/et_pan"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout6"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Enter Email:"
        android:textColor="@color/textColorOnGreyBackground"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout3"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorOnGreyBackground"
        android:id="@+id/et_email"
        android:fontFamily="sans-serif"
        tools:layout_conversion_absoluteX="114dp"
        tools:layout_conversion_absoluteY="157dp"
        tools:layout_conversion_absoluteWidth="237dp"
        tools:layout_conversion_absoluteHeight="42dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/et_pan"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/constraintLayout3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Enter Password:"
        android:textColor="@color/textColorOnGreyBackground"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="228dp"
        tools:layout_conversion_absoluteWidth="111dp"
        tools:layout_conversion_absoluteHeight="18dp"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorOnGreyBackground"
        android:fontFamily="sans-serif"
        android:id="@+id/et_password"
        tools:layout_conversion_absoluteX="143dp"
        tools:layout_conversion_absoluteY="215dp"
        tools:layout_conversion_absoluteWidth="60dp"
        tools:layout_conversion_absoluteHeight="42dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/password"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Enter Phone Number:"
        android:textColor="@color/textColorOnGreyBackground"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="754dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_phone"
        android:layout_marginStart="8dp" />

    <EditText
        android:inputType="phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorOnGreyBackground"
        android:id="@+id/et_phone"
        android:fontFamily="sans-serif"
        tools:layout_conversion_absoluteX="24dp"
        tools:layout_conversion_absoluteY="741dp"
        tools:layout_conversion_absoluteWidth="336dp"
        tools:layout_conversion_absoluteHeight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/phone"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/buttonColor"
        android:text="Register"
        android:textColor="#ffffff"
        android:id="@+id/register_but"
        android:fontFamily="sans-serif"
        tools:ignore="HardcodedText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/et_phone"
        app:layout_constraintVertical_bias="0.72" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter OTP Here"
        android:ems="10"
        android:id="@+id/otp"
         android:visibility="gone"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:text="Verify OTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@color/buttonColor"
        android:visibility="gone"
        android:layout_marginStart="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="@+id/otp"
        app:layout_constraintVertical_bias="0.88"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.19" />


</android.support.constraint.ConstraintLayout>