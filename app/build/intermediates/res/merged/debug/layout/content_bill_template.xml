<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:weightSum="1"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Create your bill template"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/activity_horizontal_margin"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:id="@+id/tvtemplatename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Template Name*" />

                <EditText
                    android:id="@+id/templatename"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorPrimary"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Bill Number Format*" />

                <EditText
                    android:id="@+id/billnumber"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:textColor="@color/colorPrimary"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/BillDateFormat"
                    android:layout_width="122dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Bill Date Format*" />

                <EditText
                    android:id="@+id/billdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:ems="10"
                    android:inputType="date" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:text="Mode of Payment*" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radiogrp1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/radioButton2"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:text="Cash" />

                    <RadioButton
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/radioButton4"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:text="Cheque" />

                    <RadioButton
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/radioButton5"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="DD" />

                    <RadioButton
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/radioButton"
                        android:layout_width="87dp"
                        android:layout_height="wrap_content"
                        android:text="Online" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="Supplier's Ref. No." />

                <EditText
                    android:id="@+id/supplierno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buyer's Order No." />

                <EditText
                    android:id="@+id/buyersorderno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>

            <TextView
                android:paddingLeft="5dp"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Terms of Delivery" />

            <EditText
                android:id="@+id/deliveryterms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:ems="10"
                android:inputType="textMultiLine"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Sector*"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Type / Package*"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="5dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="0.17"
                    android:paddingLeft="5dp"
                    android:text="VAT to be added*" />
                <RadioGroup
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radiogrp2">

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:layout_weight="0.11" />

                    <RadioButton
                        android:id="@+id/radioButton6"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:layout_weight="0.14" />


                </RadioGroup>

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.03"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button

                    android:id="@+id/createemplate"
                    android:text="Create Template"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                android:id="@+id/previewtemplate"
                android:text="preview Template"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>